#include <iostream>

double getTotal(double prices[], int size);

int main() {
	double prices[] = {3.99, 10.50, 8.01, 11.25};
	int size = sizeof(prices)/sizeof(prices[0]);
	//only pass the array name, not the square brackets
	double total = getTotal(prices, size);
	
	std::cout << '$' << total << '\n';
	return 0;
}

double getTotal(double prices[], int size) {
	//array decays to pointer when passed into a function
	/*the function does not know how big the array is
	 * because the pointer only points to the address
	 * of where the array begins*/
	double total = 0;
	for (int i = 0; i < size; i++) {
		total += prices[i];
	}
	return total;
}
