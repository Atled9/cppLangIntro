#include <iostream>

struct student {
	std::string name;
	double gpa;
	bool enrolled;
};

int main() {
	//A struct is a structure that groups related variables under one name.
	//Structs can contain many different data types.
	//Variables within a struct are known as members.
	//Members can be accessed with . "Class Member Access Operator"
	
	student student1;
	student1.name = "Gary";
	student1.gpa = 3.7;
	student1.enrolled = true;

	std::cout << student1.name << '\n';
	std::cout << student1.gpa << '\n';
	std::cout << student1.enrolled << '\n'; //true will display as 1, false will display as 0

	student student2;
	student2.name = "Sandy";
	student2.gpa = 3.1;
	student2.enrolled = true;

	std::cout << student2.name << '\n';
	std::cout << student2.gpa << '\n';
	std::cout << student2.enrolled << '\n'; //true will display as 1, false will display as 0
	
	student student3;
	student3.name = "Plankton";
	student3.gpa = 1.5;
	student3.enrolled = false;

	std::cout << student3.name << '\n';
	std::cout << student3.gpa << '\n';
	std::cout << student3.enrolled << '\n'; //true will display as 1, false will display as 0
	return 0;
}
