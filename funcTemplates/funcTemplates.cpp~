#include <iostream>

/*
int max(int x, int y) {
	return x > y ? x : y;
}
//overloaded function that takes and returns doubles
double max(double x, double y) {
	return x > y ? x : y;
}

char max(char x, char y) {
	return x > y ? x : y;
}
*/
//Instead of writing a series of overloaded functions
//let's use a function template

//Using the auto type, the compiler will deduce what
//the return type should be
template <typename T, typename U>
auto max(T x, U y) {
	return x > y ? x : y;
}

int main() {
	//A function template describes what a function looks like.
	//It can be used to generate as many overloaded functions
	//as needed, each using different data types
	
	std::cout << max(1, 2) << '\n';
	std::cout << max(1.1, 2.1) << '\n';
	std::cout << max('1', '2') << '\n';
	std::cout << max(1, 2.1) << '\n';
		
	return 0;
}
